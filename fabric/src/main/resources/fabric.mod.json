{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",

  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "BlayTheNinth"
  ],
  "contact": {
    "homepage": "${homepage}",
    "sources": "${sources}",
    "issues": "${issues}"
  },

  "license": "${license}",
  "icon": "${mod_id}.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.blay09.mods.craftingtweaks.fabric.FabricCraftingTweaks"
    ],
    "client": [
      "net.blay09.mods.craftingtweaks.fabric.client.FabricCraftingTweaksClient"
    ],
    "modmenu": [
      "net.blay09.mods.craftingtweaks.fabric.compat.ModMenuIntegration"
    ]
  },
  "mixins": [
    "craftingtweaks.mixins.json",
    "craftingtweaks.fabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": "*",
    "balm-fabric": "*",
    "minecraft": ">=${minecraft_version}",
    "java": ">=${java_version}"
  },
  "suggests": {
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/VAfZ2Nau6j"
      }
    }
  }
}
